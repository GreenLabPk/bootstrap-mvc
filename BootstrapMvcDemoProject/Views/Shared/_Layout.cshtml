@using ExtraMvcExtension.Bootstrap.Enums
@using ExtraMvcExtension.Bootstrap
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @using (Bootstrap.BeginMenu(MenuType.StaticTop))
    {
        @Bootstrap.MenuTitle("My Title", "Index", "Home")

        using(Bootstrap.BeginMenuItems())
        {
            @Bootstrap.MenuItem("My Menu 1", "MenuOne", "Home")
            @Bootstrap.MenuItem("My Menu 2", "MenuTwo", "Home")
        }
    }

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
